{
    "dataRoles": [
        { "displayName": "Category Data", "name": "category", "kind": "Grouping" },
        { "displayName": "Measure Data", "name": "measure", "kind": "Measure" }
    ],
    "objects": {
        "dataPoint": {
            "properties": {
                "fill": {
                    "displayName": "Bar Color",
                    "type": { "fill": { "solid": { "color": true } } }
                },
                "fontSize": {
                    "displayName": "Text Size",
                    "type": { "numeric": true }
                },
                "barRadius": {
                    "displayName": "Bar Radius",
                    "type": { "numeric": true }
                },
                "barWidth": {
                    "displayName": "Bar Width",
                    "type": { "numeric": true }
                },
                "barSpacing": {                       
                    "displayName": "Bar Spacing",
                    "type": { "numeric": true }
                }
            }
        }
    },
    "dataViewMappings": [
        {
            "categorical": {
                "categories": {
                    "for": { "in": "category" }
                },
                "values": {
                    "for": { "in": "measure" }
                }
            }
        }
    ],
    "privileges": []
}
