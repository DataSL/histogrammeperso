{
    "dataRoles": [
        { "displayName": "Category Data", "name": "category", "kind": "Grouping" },
        { "displayName": "Measure Data", "name": "measure", "kind": "Measure" }
    ],
    "objects": {
        "dataPoint": {
            "properties": {
                "fill": {
                    "type": { "fill": { "solid": { "color": true } } }
                },
                "fontSize": {
                    "type": { "numeric": true }
                },
                "fontFamily": {
                    "displayName": "Font family for values",
                    "type": { "text": true }
                },
                "fontColor": {
                    "displayName": "Font color for values",
                    "type": { "fill": { "solid": { "color": true } } }
                },
                "barRadius": {
                    "type": { "numeric": true }
                },
                "barWidth": {
                    "type": { "numeric": true }
                },
                "barSpacing": {
                    "type": { "numeric": true }
                },
                "valueDisplayMode": {
                    "type": { "numeric": true }
                },
                "decimalPlaces": {
                    "type": { "numeric": true }
                }
            }
        },
        "xAxis": {
            "properties": {
                "show": {
                    "type": { "bool": true }
                },
                "title": {
                    "type": { "text": true }
                },
                "labelFormat": {
                    "type": { "text": true }
                },
                "labelRotation": {
                    "type": { "numeric": true }
                },
                "fontSize": {
                    "displayName": "X axis font size",
                    "type": { "numeric": true }
                },
                "fontFamily": {
                    "displayName": "X axis font family",
                    "type": { "text": true }
                },
                "fontColor": {
                    "displayName": "X axis font color",
                    "type": { "fill": { "solid": { "color": true } } }
                },
                "fontWeight": {
                    "displayName": "X axis font weight (normal/bold)",
                    "type": { "text": true }
                }
            }
        }
    },
    "dataViewMappings": [
        {
            "conditions": [
                { "measure": { "max": 1 } }
            ],
            "categorical": {
                "categories": {
                    "for": { "in": "category" }
                },
                "values": {
                    "for": { "in": "measure" }
                }
            }
        }
    ],
    "privileges": []
}
